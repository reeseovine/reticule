{
	"type": "module",
	"node": "^12.20.0 || ^14.13.1 || >=16.0.0",
	"name": "reticule",
	"version": "1.0.1",
	"description": "Save articles to read later in your feed aggregator of choice.",
	"scripts": {
		"build": "rimraf -fr ./dist && tsc",
		"dev": "nodemon --verbose",
		"format": "prettier -w ./src/",
		"prebuild": "node ./get_version.js > src/version.ts",
		"start": "node ./dist/server.js"
	},
	"keywords": [
		"rss",
		"pocket",
		"bookmarklet"
	],
	"author": "Reese Sapphire <reese@ovine.xyz>",
	"license": "Unlicense",
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/node": "^18.16.1",
		"@types/sanitize-html": "^2.6.2",
		"nodemon": "^2.0.16",
		"prettier": "^2.6.2",
		"rimraf": "^3.0.2",
		"simple-git": "^3.18.0",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.4"
	},
	"dependencies": {
		"@extractus/article-extractor": "^7.2.15",
		"dotenv": "^16.0.1",
		"env-var": "^7.3.1",
		"express": "^4.18.1",
		"express-async-errors": "^3.1.1",
		"lowdb": "^6.0.1"
	},
	"prettier": {
		"printWidth": 100,
		"semi": false,
		"singleQuote": true,
		"quoteProps": "consistent"
	}
}
